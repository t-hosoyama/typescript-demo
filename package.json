{
  "name": "typescript-demo",
  "private": true,
  "scripts": {
    "start": "npm-run-all -l -s clean:* -p watch & sleep 10; run-s -l server",
    "build": "npm-run-all -l -p typecheck lint -s clean -p build:*",
    "watch": "npm-run-all -l -s clean -p watch:*",
    "clean": "npm-run-all -l -s clean:*",
    "build:pages": "./ts-run ts-node ./src/scripts/build-pages.ts ",
    "build:images": "cp -r src/assets/images/* dist/assets/images/",
    "build:scripts": "./ts-run webpack --mode production",
    "build:styles": "cp -r src/assets/styles/* dist/assets/styles/",
    "watch:scripts": "./ts-run webpack --mode development --devtool source-map -w",
    "watch:static": "./ts-run ts-node src/scripts/watch.ts",
    "clean:rm": "rm -rf dist/*",
    "clean:mkdir": "mkdir -p dist/assets && cd dist/assets && mkdir scripts styles images",
    "server": "npx http-server dist -o",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --fix --ext .ts src"
  },
  "dependencies": {
    "core-js": "^3.1.4",
    "regenerator-runtime": "^0.13.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@types/glob": "^7.1.1",
    "@types/hard-source-webpack-plugin": "^1.0.1",
    "@types/node": "^12.6.8",
    "@types/nunjucks": "^3.1.1",
    "@types/terser-webpack-plugin": "^1.2.1",
    "@types/webpack": "^4.32.1",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "babel-loader": "^8.0.6",
    "chokidar": "^3.0.2",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "glob": "^7.1.4",
    "hard-source-webpack-plugin": "^0.13.1",
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.0",
    "prettier": "^1.18.2",
    "terser-webpack-plugin": "^1.3.0",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.5.3",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6"
  }
}
